{
    "manifest_version": 3,
    "name": "ClickGuard",
    "version": "1.0.0",
    "description": "Detecting clickbait articles",
    "host_permissions": [
        "https://*/*"
    ],
    "permissions": [
        "activeTab", 
        "storage",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
      },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
  }