{
    "manifest_version": 3,
    "name": "ClickGuard",
    "version": "1.0.0",
    "description": "Detecting clickbait articles",
    "host_permissions": [
        "https://*/*"
    ],
    "permissions": ["activeTab", 
                    "storage",
                    "scripting",
                    "tabs"],
    "action": {
        "default_popup": "popup.html"
      },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ]
  }